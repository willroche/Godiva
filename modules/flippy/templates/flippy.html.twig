<div class="slice h-clearfix">
 <div class="l-col-10 l-content h-clearfix pagination-modify">
   <div class="flippy" id="test">
     {% if first %}
       <div class="l-col-5 l-padding">
           <div class="pagination-button prev">{{ first }}</div>
       </div>
     {% endif %}
     {% if prev %}
       <div class="l-col-5 l-padding">
           <div class="pagination-button prev">{{ prev }}</div>
       </div>
     {% endif %}
     {% if random %}
       <div class="l-col-5 l-padding">
           <div class="pagination-button next">{{ random }}</div>
       </div>
     {% endif %}
     {% if next %}
       <div class="l-col-5 l-padding">
           <div class="pagination-button next">{{ next }}</div>
       </div>
     {% endif %}
     {% if last %}
       <div class="l-col-5 l-padding">
           <div class="pagination-button next">{{ last }}</div>
       </div>
     {% endif %}
   </div>
 </div>
</div>